{%- if notLiveServices.length > 0 -%}
  <h2 class="govuk-heading-l">Services which are not live</h2>
  <div class="app-inset-text">
    {%- for service in notLiveServices -%}
      <div class="govuk-!-margin-bottom-9">
        <h3 class="govuk-heading-m">
          {{service.name}}
          {%- if service.alias.length > 0 -%}
            <span class="govuk-visually-hidden"> also known as</span><span class="govuk-caption-m">{{service.alias}}</span>
          {%- endif -%}
        </h3>

        <h4 class="govuk-visually-hidden">
          Service type for {{service.name}}
        </h4>
        {{ govukTag({
          text: service.type + ' facing'
        }) }}

        <h4 class="govuk-visually-hidden">Notes for {{service.name}}</h4>
        <p>
          {{service.notes}}
        </p>
        
        {{ progressBar({
          heading: 'Progress',
          heading_level: 4,
          compliance_rate: service.stats.progress
        }) }}
  
        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              WCAG 2.1 <br />
              manual checks
            </dt>
            <dd class="govuk-summary-list__value">
              {{service.evidence.wcag.status}}
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Screenreader testing
            </dt>
            <dd class="govuk-summary-list__value">
              {{service.evidence.screenreader.status}}
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Speech recognition testing
            </dt>
            <dd class="govuk-summary-list__value">
              {{service.evidence.speech_recognition.status}}
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Magnifier testing
            </dt>
            <dd class="govuk-summary-list__value">
              {{service.evidence.magnifier.status}}
            </dd>
          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Accessibility statement
            </dt>
            <dd class="govuk-summary-list__value">
              {{service.evidence.statement.status}}
            </dd>
            {%- if service.evidence.statement.link.length > 0 -%}
              <dd class="govuk-summary-list__value">
                <a class="govuk-link" href="{{service.evidence.statement.link}}">
                  Accessibility statement <span class="govuk-visually-hidden"> for {{service.name}}</span>
                </a>
              </dd>
            {%- endif -%}
          </div>
        </dl>
      </div>
    {%- endfor -%}
  </div>
{%- endif -%}