{%- extends '../../common/layouts/default.njk' -%}
{%- set sitemapActive = true -%}
{%- set page_title = 'Sitemap' -%}

{%- block content -%}

<h1 class="govuk-heading-xl">
  Sitemap
</h1>

<div class="app-inset-text govuk-!-margin-top-9">
  <h2 class="govuk-heading-m">Main navigation</h2>
  <ul class="govuk-list">
    {%- for navItem in nav.main -%}
      <li><a class="govuk-link" href="{{navItem.link}}">{{navItem.name}}</a></li>
      {% if navItem.children.length > 0 %}
        <li>
          <ul>
            {%- for child in navItem.children -%}
              <li><a class="govuk-link" href="{{child.link}}">{{child.name}}</a></li>
            {%- endfor -%}
          </ul>
        </li>
      {% endif %}
    {%- endfor -%}
  </ul>

  <h2 class="govuk-heading-m">Filters</h2>
  <ul class="govuk-list">
    {%- for navItem in nav.filters -%}
      <li><a class="govuk-link" href="{{navItem.link}}">{{navItem.name}}</a></li>
      {% if navItem.children.length > 0 %}
        <li>
          <ul>
            {%- for child in navItem.children -%}
              <li><a class="govuk-link" href="{{child.link}}">{{child.name}}</a></li>
            {%- endfor -%}
          </ul>
        </li>
      {% endif %}
    {%- endfor -%}
  </ul>

  <h2 class="govuk-heading-m">Support links</h2>
  <ul class="govuk-list">
    {%- for navItem in nav.filters -%}
      <li><a class="govuk-link" href="{{navItem.link}}">{{navItem.name}}</a></li>
      {% if navItem.children.length > 0 %}
        <li>
          <ul>
            {%- for child in navItem.children -%}
              <li><a class="govuk-link" href="{{child.link}}">{{child.name}}</a></li>
            {%- endfor -%}
          </ul>
        </li>
      {% endif %}
    {%- endfor -%}
  </ul>
</div>

{%- endblock -%}
